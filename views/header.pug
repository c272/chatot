style(type='text/css').
           .main {
                padding-top: 20px;
                padding-right: 20px;
                padding-bottom: 20px;
                padding-left: 20px;
                font-family: Hiragino Sans GB, Microsoft YaHei, WenQuanYi, Airal, sans-serif;
                font-size: 85%;
            }
            
            .main a {
                color: #8e908c;
                text-decoration: none;
            }
            
            .titlebar {
              margin-top: 3px;
              margin-bottom: 3px;
              float: left;
            }
            
            .titlebar-right {
              margin-top: 3px;
              margin-bottom: 3px;
              float: right;
            }
            
            .userprofile-right {
              float: right;
            }

            .userprofile-left {
              display: inline;
            }
            
            .user-profile-picture {
              width: 64px;
              height: 64px;
              max-width: 64px;
              min-width: 64px;
              max-height: 64px;
              min-height: 64px;
              margin-bottom: 5px;
            }
            
            .uprof-profile-picture {
              width: 72px;
              height: 72px;
              max-width: 72px;
              min-width: 72px;
              max-height: 72px;
              min-height: 72px;
              margin-bottom: 0px;
            }

            .postinfo-left {
              float: left;
            }
            
            .postinfo-right {
              float: right;
            }
            
            .news-post {
              max-width: 700px;
              width: 700px;
              margin-bottom: 30px;
            }
            
            .userinfo {
              text-align: center;
              max-width: 200px;
              min-width: 200px;
              margin-top: 10px;
              margin-left: 10px;
              margin-right: 20px;
              margin-bottom: 5px;
              overflow: overlay;
            }
            
            .post_div {
              min-height: 150px;
              border-style: ridge;
              padding-left: 5px;
              padding-right: 5px;
              padding-top: 5px;
              padding-bottom: 5px;
              display: inline-block;
              height: auto;
            }
            
            .postbody {
              float: left;
              align-self: flex-start;
              overflow:hidden;
            }
            
            /* Inline forms classes */
            .form-inline { 
              display: flex;
              flex-flow: row wrap;
              align-items: center;
            }
            .form-inline label {
              margin: 5px 10px 5px 0;
            }
            .form-inline input {
              vertical-align: middle;
              margin: 5px 10px 5px 0;
              padding: 10px;
              background-color: #fff;
              border: 1px solid #ddd;
            }
            
            /* Bordered divs. */
            .bordered_div {
              border-style: ridge;
              padding-left: 5px;
              padding-right: 5px;
              padding-top: 5px;
              padding-bottom: 5px;
            }
            
            /* Images with no AA */
            .noAA { 
              image-rendering: optimizeSpeed;             /* STOP SMOOTHING, GIVE ME SPEED  */
              image-rendering: -moz-crisp-edges;          /* Firefox                        */
              image-rendering: -o-crisp-edges;            /* Opera                          */
              image-rendering: -webkit-optimize-contrast; /* Chrome (and eventually Safari) */
              image-rendering: pixelated; /* Chrome */
              image-rendering: optimize-contrast;         /* CSS3 Proposed                  */
              -ms-interpolation-mode: nearest-neighbor;   /* IE8+                           */
            }